{
    "name": "reyatwel/weight-conversion-pest",
    "description": "Weight conversion with PHP and PEST",
    "keywords": [
        "Reyatwel",
        "weight-conversion-pest"
    ],
    "homepage": "https://github.com/reyatwel/weight-conversion-pest",
    "license": "MIT",
    "authors": [
        {
            "name": "Rey Atwel",
            "email": "sysdev@gmx.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "pestphp/pest": "^2.20",
        "friendsofphp/php-cs-fixer": "^3.21.1",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "ReyAtwel\\WeightConversion\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ReyAtwel\\WeightConversion\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
